@model IdeGames.Services.Models.Models.Account.UserViewModelCollection

@{
    ViewData["Title"] = "Index";
}

<div style="margin-top: 50px">
    <table class="table table-hover table-bordered">
        <thead style="background-color: #bf2d28">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">Registered on</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var user in Model.Users)
        {
            <tr style="margin-top: 3px">
                <th scope="row">@user.Id</th>
                <td>@user.FullName</td>
                <td>@user.Email</td>
                <td>@user.RegisteredOn</td>
                <td>
                    <a class="btn btn-danger" asp-controller="Account" asp-action="Delete" asp-route-id="@user.Id">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>