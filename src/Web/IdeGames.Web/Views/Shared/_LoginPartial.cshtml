@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdeGamesUser> SignInManager
@inject UserManager<IdeGamesUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new {area = ""})" method="post" id="logoutForm" class="navbar-right">
        <ul class="dropdown navbar-left">
            <li class="btn btn-secondary dropdown-toggle" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <a style="color: gray" class="btn">
                    <i class="far fa-user"></i>
                </a>
            </li>
            <li class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage" class="btn dropdown-item">Profile</a>
                <button type="submit" class="btn-link dropdown-item">Logout</button>
            </li>
        </ul>
        <ul class="nav navbar-nav navbar-left">
            @if (SignInManager.IsSignedIn(User))
            {
                <li>
                    <a asp-area="" asp-controller="Cart" asp-action="Index">
                        <i class="fas fa-shopping-cart"></i>
                    </a>
                </li>
            }
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>
            <a asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li>
            <a asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    </ul>
}