@{
    ViewData["Title"] = "Index";
}

<head>
    <link href="css/cart.css" rel="stylesheet" id="bootstrap-css">
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">
</head>

<div class="container">
    <h1>Shopping Cart</h1>
    <table style="margin-top: 50px" id="cart" class="table table-hover table-condensed">
        <thead>
        <tr>
            <th style="width: 50%">Product</th>
            <th style="width: 10%">Price</th>
            <th style="width: 8%">Quantity</th>
            <th style="width: 22%" class="text-center">Subtotal</th>
            <th style="width: 10%"></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in ViewBag.cart)
        {
            <tr>
                <td data-th="Product">
                    <div class="row">
                        <div class="col-sm-2 hidden-xs">
                            <img src="@item.Game.ImageUrl" alt="..." class="img-responsive"/>
                        </div>
                        <div class="col-sm-10">
                            <h4 class="nomargin">@item.Game.Name</h4>
                        </div>
                    </div>
                </td>
                <td data-th="Price">@item.Game.Price</td>
                <td data-th="Quantity">
                    <input disabled="disabled" type="number" class="form-control text-center" value="@item.Quantity">
                </td>
                <td data-th="Subtotal" class="text-center">@(item.Game.Price * item.Quantity)</td>
                <td class="actions" data-th="">
                    <a asp-controller="Cart" asp-action="Remove" asp-route-id="@item.Game.Id" class="btn btn-danger btn-sm">
                        <i class="fa fa-trash-o"></i>
                    </a>
                </td>
            </tr>
        }
        </tbody>
        <tfoot>
        <tr>
            <td>
                <a asp-controller="Games" asp-action="Index" class="btn btn-warning"><i class="fa fa-angle-left"></i> Continue Shopping</a>
            </td>
            <td colspan="2" class="hidden-xs"></td>
            <td class="hidden-xs text-center">
                <strong>Total: @ViewBag.total</strong>
            </td>
            <td>
                <a asp-controller="Cart" asp-action="FinalizeOrder" class="btn btn-success btn-block">Checkout <i class="fa fa-angle-right"></i></a>
            </td>
        </tr>
        </tfoot>
    </table>
    <br/><br/>
</div>